
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>a.com</title>
</head>
<body>

    <div>
        <div>单点登录Demo<br />当前站点：www.a.com</div>
        @if (ViewBag.v as string != "error")
            {

            <div>登录成功,当前用户：@ViewBag.v</div>
            <a href="http://localhost:2076/login/loginOut?redirect_url=http://localhost:2177&token=@(ViewBag.token)">退出</a><br />
          
        }
        else
        {
            <a href="http://localhost:2076/login?redirect_url=http://localhost:2177">登录</a><br />
          
        }
        <a href="http://localhost:2260">跳转到www.b.com</a>

    </div>

</body>
</html>
